<!-- Action Input -->
<div style="background-color: lightgray; width: 100%; height: 100vh; text-align: center;">
    is my post page
    <form action="/post" method="POST" style="width: 400px; margin: auto; background-color: royalblue; text-align: center;">
        <input type="text" name="PostBody" placeholder="Post">
        <button>Submit</button>
    </form>

    <!-- Posts -->
    <% allPosts.forEach((post) => {%>
        <div style="width: 100%;">
            <div style="width: 400px; background: white; margin: auto; padding: 20px; margin-top: 20px; text-align: left;">
                <p><%= post.user.fullName %> </p>
                <div style="color: gray;">
                    <p><%= new Date(post.createdAt).toLocaleTimeString() + " " + new Date(post.createdAt).toLocaleDateString() %> </p>
                </div>
                
                <p><%= post.text %> </p>
            </div>
        </div>
   <% }) %> 
</div>
